<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


<com.google.android.material.button.MaterialButton
        android:backgroundTint="@color/white"
        android:textColor="@color/Ring"
        android:text="Log in with Facebook"

        app:cornerRadius="100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="32dp"
        android:id="@+id/Butomn"
        android:layout_marginBottom="-50dp"

        />
    <TextView
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="------OR-------"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Butomn"
        android:layout_marginHorizontal="100dp"
        android:layout_marginVertical="16dp"

        android:id="@+id/gg"

        />
    <TextView
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/gg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Up With Email"
        android:layout_marginVertical="16dp"
        />
    <com.google.android.material.button.MaterialButton
        android:backgroundTint="@color/blue"
        app:cornerRadius="120dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="32dp"
        android:layout_marginVertical="16dp"
        android:text="Game now"
        app:layout_constraintBottom_toBottomOf="parent"

        />
    <ImageView
        app:layout_constraintBottom_toTopOf="@id/Butomn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/img_2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginVertical="100dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>

